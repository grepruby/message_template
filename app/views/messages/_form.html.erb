<h4>Send Message</h4>
<%= simple_form_for(@message,:remote=>true) do |f| %>
  <% if @message.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@message.errors.count, "error") %> prohibited this message from being saved:</h2>

      <ul>
      <% @message.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="span4">
     <%= f.label :users,:class=>"control-label" %>
     <%= f.select :user_id ,User.all.map{|u| [u.name,u.id]}%>
    </div>

    <div class="span4">
      <%= f.label :message_template,:class=>"control-label" %>
      <%= f.select :message_template_id ,MessageTemplate.all.map{|m| [m.name,m.id]}%>
    </div>
    
    <div class="span2">
      <br/>
      <%= f.submit %>
    </div>
  </div>

